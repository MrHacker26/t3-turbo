{
  "name": "t3-turbo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "concurrently \"bun run --bun lint:root\" \"bun run --bun lint:workspace\"",
    "lint:root": "eslint --cache --no-error-on-unmatched-pattern *.js *.ts scripts/**/*.ts",
    "lint:workspace": "turbo lint --ui=stream",
    "format": "turbo run format --continue -- --cache --ignore-path .gitignore --ignore-path ../../.gitignore",
    "typecheck": "turbo run typecheck --ui=stream",
    "clean": "echo 'Cleaning...' && bunx rimraf --glob '**/{node_modules,dist,.next,.turbo}'",
    "typecheck:watch": "turbo typecheck:watch",
    "match-versions": "bun run scripts/match-versions.ts"
  },
  "devDependencies": {
    "@t3-turbo/config": "workspace:*",
    "concurrently": "9.2.1",
    "prettier": "3.8.1",
    "rimraf": "6.1.3",
    "turbo": "2.8.9",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "eslint": "9",
    "picocolors": "1.1.1",
    "zod": "4.3.6"
  }
}
